<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- MAIN THEME -->
    <style name="ThemeJumplings" parent="android:style/Theme.NoTitleBar.Fullscreen">
        <!-- TODO: declare here the default text strings -->
    </style>

    <!-- TEXTS -->
    <style name="MainFont" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary_text_colour</item>
        <item name="android:textSize">19sp</item>
        <item name="fontPath">fonts/aescrawl.ttf</item>
    </style>

    <style name="MainFont.h1">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondary_text_colour</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="MainFont.h2">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondary_text_colour</item>
        <item name="android:textSize">31sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainFont.h3">
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="MainFont.h4">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MainFont.About">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="MainFont.GameScore">
        <item name="android:textColor">@color/secondary_text_colour</item>
    </style>

    <style name="MainFont.ScoreItem">
        <item name="android:textColor">@color/secondary_text_colour</item>
    </style>

    <!-- BUTTONS -->
    <style name="ColorfulButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/primary_text_colour</item>
        <item name="fontPath">fonts/aescrawl.ttf</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/colorful_button_background_selector</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ColorfulButton.Menu" >
        <item name="android:minWidth">@dimen/menu_activity_button_min_size</item>
        <item name="android:minHeight">@dimen/menu_activity_button_min_size</item>
    </style>
    
    <style name="TransparentButton" parent="@android:style/Widget.Button">
        <item name="fontPath">fonts/aescrawl.ttf</item>
        <item name="android:background">@drawable/transparent_button_background_selector</item>
        <item name="android:minWidth">16pt</item>
        <item name="android:minHeight">10pt</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- SCORE LIST -->
    <style name="MainFont.ScoreListHeaderLayout">
        <item name="android:background">#0095FF</item>
    </style>

    <style name="MainFont.ScoreListHeaderText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">23sp</item>
    </style>

    <!-- CUSTOM DIALOGS -->
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomDialogContent">
        <item name="android:background">@drawable/colorful_button_enabled</item>
        <item name="android:padding">10dp</item>
        <item name="android:minWidth">280dip</item>
    </style>

    <!-- CUSTOM TAB -->
    <style name="CustomTabWidgetStyle" parent="@android:attr/tabWidgetStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontPath">fonts/aescrawl.ttf</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ThemeJumplings.PopupActivity">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>