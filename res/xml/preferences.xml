<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="@string/config_value_default_sound"
        android:key="@string/config_sound_key"
        android:summary="@string/prefs_sound_summary"
        android:title="@string/prefs_sound_title" />

    <ListPreference
        android:defaultValue="@string/config_value_default_vibrator_level"
        android:entries="@array/effectsLevelEntries"
        android:entryValues="@array/effectsLevelValues"
        android:key="@string/config_vibrator_key"
        android:summary="@string/prefs_vibration_summary"
        android:title="@string/prefs_vibration_title" />
    
    <ListPreference
        android:defaultValue="@string/config_value_default_shake_level"
        android:entries="@array/effectsLevelEntries"
        android:entryValues="@array/effectsLevelValues"
        android:key="@string/config_shake_key"
        android:summary="@string/prefs_shake_summary"
        android:title="@string/prefs_shake_title" />
    
    <ListPreference
        android:defaultValue="@string/config_value_default_flash_level"
        android:entries="@array/effectsLevelEntries"
        android:entryValues="@array/effectsLevelValues"
        android:key="@string/config_flash_key"
        android:summary="@string/prefs_flash_summary"
        android:title="@string/prefs_flash_title" />

</PreferenceScreen>