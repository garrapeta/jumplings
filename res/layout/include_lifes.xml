<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lifes_counter_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/lifes_life1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/life_counter1" >
    </ImageView>

    <ImageView
        android:id="@+id/lifes_life2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/life_counter2" >
    </ImageView>

    <ImageView
        android:id="@+id/lifes_life3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/life_counter3" >
    </ImageView>

    <ImageView
        android:id="@+id/lifes_life4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/life_counter4" >
    </ImageView>

    <ImageView
        android:id="@+id/lifes_life5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/life_counter5" >
    </ImageView>

</LinearLayout>