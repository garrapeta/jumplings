        <com.garrapeta.jumplings.ui.CustomFontTextView
            style="@style/MainFont.About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap the Jumplings before they fall from the bottom side of the screen. Don&apos;t let them fall, or you&apos;ll lose one life." />

