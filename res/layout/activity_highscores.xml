<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/highscoresListing_localScoresTabContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- header -->

        <include
            android:id="@+id/highscoresListing_localScoresHeader"
            layout="@layout/include_score_header" />

        <ListView
            android:id="@+id/highscoresListing_localHighScoresListView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/highscoresListing_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingLeft="@dimen/ui_spacing"
        android:paddingRight="@dimen/ui_spacing" >

        <!-- ADMOB -->

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/highscoresListing_advertising_banner_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_off_game_ad_unit" />
        <!-- /ADMOB -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_spacing"
            android:gravity="right" >

            
            <com.garrapeta.jumplings.view.CustomFontButton
                android:id="@+id/highscoresListing_submitBtn"
                style="@style/ColorfulButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_spacing"
                android:text="@string/highscores_submit" />


        </LinearLayout>
    </RelativeLayout>
 
</RelativeLayout>