<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomDialogContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.garrapeta.jumplings.ui.CustomFontTextView   
        android:id="@+id/dialog_message_big"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:gravity="center_horizontal"
	    android:visibility="gone"
	    style="@style/MainFont.h2"
    />
       	
     <com.garrapeta.jumplings.ui.CustomFontTextView   
        android:id="@+id/dialog_message_small"
        android:layout_below="@id/dialog_message_big"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:gravity="center_horizontal"
	    android:visibility="gone"
	    android:textColor="@android:color/black"
	    style="@style/MainFont.h4"
    />
        
    <FrameLayout
        android:id="@+id/dialog_body_frame"
        android:layout_below="@id/dialog_message_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
         />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_body_frame"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <com.garrapeta.jumplings.ui.CustomFontButton
            android:id="@+id/dialog_left_btn"
            style="@style/ColorfulButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="gone" />

        <com.garrapeta.jumplings.ui.CustomFontButton
            android:id="@+id/dialog_right_btn"
            style="@style/ColorfulButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>